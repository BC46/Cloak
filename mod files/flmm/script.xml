Cloak.dll
</source>
</data>

<!-- keymap.ini (defines the key for cloaking) -->
<data file="data\interface\keymap.ini" method="append">
<section>
[KeyCmd]
nickname = USER_TRADE_REQUEST
ids_name = 1983
ids_info = 3216
state = keydown
key = "U"
</section>
<source>

[KeyCmd]
nickname = USER_CLOAK
ids_name = 3007
ids_info = 2207
state = keydown
key = "C", control
</source>
</data>

<data file="data\interface\keymap.ini" method="append">
<section>
key = USER_NEXT_OBJECT
key = USER_GROUP_INVITE
key = USER_TRADE_REQUEST
</section>
<source>
key = USER_CLOAK
</source>
</data>

<!-- keylist.ini (adds the cloak key to the options menu) -->
<data file="data\interface\keylist.ini" method="append">
<section>
[key]
id = USER_CRUISE
</section>
<source>

[key]
id = USER_CLOAK
</source>
</data>

